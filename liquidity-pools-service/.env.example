# Liquidity Pools Service Environment Variables

# Server Configuration
PORT=3003
NODE_ENV=development
CORS_ORIGIN=*

# JWT Configuration (shared with auth-service)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Uniswap API Configuration
UNISWAP_API_KEY=your-uniswap-api-key-here
UNISWAP_API_BASE_URL=https://api.uniswap.org

# Redis Configuration (optional for alerts caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration (for position persistence - MVP can use in-memory)
DATABASE_URL=mongodb://localhost:27017/panorama-liquidity
# or for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/panorama_liquidity

# External Services
ETHERSCAN_API_KEY=your-etherscan-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key
BASESCAN_API_KEY=your-basescan-api-key
ARBISCAN_API_KEY=your-arbiscan-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Feature Flags
ENABLE_HOOKS_VALIDATION=true
ENABLE_POSITION_MONITORING=true
ENABLE_APR_CALCULATION=true
ENABLE_ANALYTICS=true

# Default Values
DEFAULT_SLIPPAGE_TOLERANCE=0.5
DEFAULT_DEADLINE_MINUTES=20
DEFAULT_GAS_PRICE_MULTIPLIER=1.1

# Hooks Whitelist (comma-separated addresses)
VERIFIED_HOOKS_V4=0x1234...,0x5678...

# Chain Configuration
SUPPORTED_CHAINS=1,137,8453,42161,43114,56
DEFAULT_CHAIN=1