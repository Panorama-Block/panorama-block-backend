{
  "name": "liquidity-pools-service",
  "version": "1.0.0",
  "description": "Panorama Block - Liquidity Pools Management Service for Uniswap V2/V3/V4",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run typecheck",
    "prestart": "npm run build",
    "docker:build": "docker build -t liquidity-pools-service .",
    "docker:run": "docker run -p 3003:3003 liquidity-pools-service"
  },
  "keywords": [
    "defi",
    "uniswap",
    "liquidity",
    "pools",
    "v2",
    "v3",
    "v4",
    "hooks",
    "panorama",
    "block"
  ],
  "author": "Panorama Block Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "zod": "^3.22.4",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.2",
    "axios": "^1.6.2",
    "redis": "^4.6.10",
    "ethers": "^6.8.1",
    "bignumber.js": "^9.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.16",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Panorama-Block/panorama-block-backend.git",
    "directory": "liquidity-pools-service"
  },
  "bugs": {
    "url": "https://github.com/Panorama-Block/panorama-block-backend/issues"
  },
  "homepage": "https://github.com/Panorama-Block/panorama-block-backend#readme"
}