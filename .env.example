# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_ROOT_DATABASE=panorama
MONGO_URI=mongodb://admin:password@mongodb:27017/panorama?authSource=admin
MONGO_DB_NAME=panorama

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASS=redis_password

# Port Configuration
PORT=3000
AUTH_PORT=3001
LIQUID_SWAP_PORT=3002
WALLET_TRACKER_PORT=3003

# Auth Service Configuration
AUTH_DOMAIN=panoramablock.com
AUTH_PRIVATE_KEY=your_private_key_here

# ThirdWeb Configuration
THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here

# Swap Configuration
PRIVATE_KEY=your_private_key_here
SWAP_SENDER_ADDRESS=your_sender_address_here
SWAP_RECEIVER_ADDRESS=your_receiver_address_here

# RPC URLs
RPC_URL=https://rpc.ankr.com/eth
ETHEREUM_RPC_URL=https://rpc.ankr.com/eth
POLYGON_RPC_URL=https://rpc.ankr.com/polygon
BSC_RPC_URL=https://rpc.ankr.com/bsc
BASE_RPC_URL=https://mainnet.base.org
OPTIMISM_RPC_URL=https://mainnet.optimism.io
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Rango API
X_RANGO_ID=your_rango_api_key_here

# Debug Mode
DEBUG=false

# Environment
NODE_ENV=development

# SSL Configuration
FULLCHAIN=/etc/letsencrypt/live/api.panoramablock.com/fullchain.pem
PRIVKEY=/etc/letsencrypt/live/api.panoramablock.com/privkey.pem
FORCE_HTTPS=false
SSL_CERTS_PATH=/etc/letsencrypt
