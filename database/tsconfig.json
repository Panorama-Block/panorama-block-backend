{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "tooling/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
