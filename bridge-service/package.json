{
  "name": "bridge-service",
  "version": "1.0.0",
  "description": "PanoramaBlock TAC Cross-Chain Service with Hexagonal Architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "db:migrate": "prisma db push --schema=./prisma/schema.prisma",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@socket.io/redis-adapter": "^8.2.0",
    "@ton/ton": "^14.0.0",
    "@tonappchain/sdk": "^0.7.1",
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.20.0",
    "redis": "^5.9.0",
    "socket.io": "^4.7.5",
    "thirdweb": "^5.29.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.17.43",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "blockchain",
    "cross-chain",
    "tac",
    "ton",
    "defi",
    "hexagonal-architecture",
    "domain-driven-design",
    "panoramablock"
  ],
  "author": "PanoramaBlock Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}