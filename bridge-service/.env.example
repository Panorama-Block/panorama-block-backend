# TAC Service Configuration
PORT=3005
NODE_ENV=development

# TAC SDK Configuration
TAC_SDK_ENDPOINT=https://api.tac.build
TAC_API_KEY=your_tac_api_key
TAC_WEBHOOK_SECRET=your_webhook_secret

# Supported Chains
TAC_SUPPORTED_CHAINS=ethereum,avalanche,base,optimism
TAC_DEFAULT_BRIDGE_TIMEOUT=300000
TAC_MAX_RETRY_ATTEMPTS=3

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/panorama_tac
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_shared_with_auth
JWT_ISSUER=panoramablock
JWT_AUDIENCE=panoramablock
# Optional TON overrides (defaults to JWT_* above if not set)
#TON_JWT_SECRET=
#TON_JWT_ISSUER=
#TON_JWT_AUDIENCE=

# External Service URLs
AUTH_SERVICE_URL=http://localhost:3000
LIQUID_SWAP_SERVICE_URL=http://localhost:3002
LIDO_SERVICE_URL=http://localhost:3004
AVAX_SERVICE_URL=http://localhost:3001
TON_BRIDGE_API_URL=https://api.layerzeroscan.com

# Protocol Configuration
LIDO_CONTRACT_ADDRESS=0xae7ab96520DE3A18E5e111B5EaAb095312D7fE84
BENQI_COMPTROLLER_ADDRESS=0x486af39519B4Dc9a7fCcd318217352830E8AD9b4
UNISWAP_V3_FACTORY=0x1F98431c8aD98523631AE4a59f267346ea31F984

# WebSocket Configuration
WEBSOCKET_PORT=3006
ENABLE_WEBSOCKET=true

# Monitoring
ENABLE_ANALYTICS=true
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Security
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*

# Debug
DEBUG=false
